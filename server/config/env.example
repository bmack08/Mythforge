# Mythwright Server Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.8

# Anthropic Configuration (for future use)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Google AI Configuration (for future use)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# AI Service Configuration
AI_PROVIDER_PRIMARY=openai
AI_PROVIDER_FALLBACK=anthropic
AI_COST_TRACKING_ENABLED=true
AI_USAGE_LIMITS_ENABLED=true
AI_DAILY_TOKEN_LIMIT=100000
AI_MONTHLY_COST_LIMIT=100.00

# Database Configuration
DATABASE_URL=sqlite:./mythwright.db
DATABASE_LOGGING=false

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/mythwright.log
